    <date>2022-02-10T20:56:39Z</date>
    <groups>
        <group>
            <name>Templates</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template services Linux</template>
            <name>Template services Linux</name>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Services Status</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>Discovery Services</name>
                    <key>discovery_state</key>
                    <delay>12h</delay>
                    <filter>
                        <evaltype>AND</evaltype>
                    </filter>
                    <lifetime>0</lifetime>
